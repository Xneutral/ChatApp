<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_6sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/left_message_ll"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/chat_color_sender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="@dimen/_6sdp"
            android:textSize="@dimen/_18ssp"
            android:text="Hello"
            android:id="@+id/left_chat_tv"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_message_ll"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/chat_color_receiver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="@dimen/_6sdp"
            android:textSize="@dimen/_18ssp"
            android:text="Hello"
            android:id="@+id/right_chat_tv"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>